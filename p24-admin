#!/bin/bash
# P24_SlotHunter Admin Panel Quick Access
# Direct access to the comprehensive management interface

PROJECT_DIR="$(cd "$(dirname "${BASH_SOURCE[0]}")" && pwd)"

# Check if server manager exists
if [ ! -f "$PROJECT_DIR/server_manager.sh" ]; then
    echo "‚ùå Server manager not found: $PROJECT_DIR/server_manager.sh"
    exit 1
fi

# Make sure it's executable
chmod +x "$PROJECT_DIR/server_manager.sh"

# Launch the comprehensive server management interface
exec "$PROJECT_DIR/server_manager.sh"