# متغیرهای محیطی P24_SlotHunter
# این فایل نمونه است - فایل .env را ایجاد کنید

# توکن ربات تلگرام (از @BotFather دریافت کنید)
TELEGRAM_BOT_TOKEN=your_bot_token_here

# شناسه چت ادمین (برای دریافت گزارش‌ها)
ADMIN_CHAT_ID=your_chat_id_here

# تنظیمات بهینه‌سازی (برای جلوگیری از Rate Limiting)
CHECK_INTERVAL=90          # فاصله بررسی (ثانیه) - پیشنهادی: 90-120
DAYS_AHEAD=5              # روزهای بررسی - پیشنهادی: 3-5
REQUEST_DELAY=1.5         # تاخیر بین درخواست‌ها - پیشنهادی: 1.5-2.0

# تنظیمات عمومی (اختیاری)
LOG_LEVEL=INFO
DATABASE_URL=sqlite+aiosqlite:///data/slothunter.db
API_BASE_URL=https://apigw.paziresh24.com/booking/v2

# نکات مهم:
# - CHECK_INTERVAL کمتر از 60 ثانیه توصیه نمی‌شود
# - DAYS_AHEAD بیشتر از 7 روز باعث Rate Limiting می‌شود
# - REQUEST_DELAY کمتر از 1 ثانیه خطرناک است